{
  "name": "enl/deferred-dispatcher",
  "homepage": "https://github.com/enl/deferred-dispatcher",
  "type": "library",
  "description": "Extension for Symfony EventDispatcher which adds the way to defer handle of fired Event into later stage of request execution. ",
  "keywords": ["event dispatcher", "symfony", "postpone", "defer"],
  "authors": [{
    "name": "Alex Panshin",
    "email": "deadyaga@gmail.com",
    "homepage": "http://alex-panshin.me",
    "role": "Developer"
  }],
  "require": {
    "php": "~5.6 || ~7.0",
    "symfony/event-dispatcher": "~2.7 || ~3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.8"
  },
  "autoload": {
    "psr-4": {
      "Enl\\DeferredDispatcher\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Enl\\DeferredDispatcher\\Test\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "format": "phpcbf --standard=psr2 src/"
  }
}
